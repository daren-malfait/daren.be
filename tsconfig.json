{
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    ".cache",
    "src/@types/gatsby/"
  ],
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~*": [
        "src/*"
      ],
      "~styles/*": [
        "config/styles/*"
      ],
      "~types/*": [
        "src/@types/*"
      ],
    },
    "preserveWatchOutput": true
  }
}